<UserControl x:Class="Escape.Enigma"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Escape"
             mc:Ignorable="d" 
             d:DesignHeight="830" d:DesignWidth="1536">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="img\items\room1\enigma\enigma_bg.jpg" Grid.ColumnSpan="2" Grid.RowSpan="6" Stretch="Fill" />
        <Image Name="first_red" Visibility="Hidden" Source="img\items\room1\enigma\red_indicator.png" Margin="626,36,689,25"/>
        <Image Name="last_green" Visibility="Hidden" Source="img\items\room1\enigma\green_indicator.png" Margin="812,36,503,25"/>
        <Button Content="Red" Click="red" Background="White" Margin="518,69,792,56" Grid.Row="5"/>
        <Button Content="Green" Click="green" Background="White" Margin="966,69,319,56" Grid.Row="5"/>

        <Button Height="Auto" Content="1" Foreground="White" FontSize="40" Margin="307,20,1012.4,14.6" Grid.Row="2">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse StrokeThickness="0">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <RadialGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="0.65" />
                                        </TransformGroup>
                                    </RadialGradientBrush.Transform>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Name="close_enigma" Background="#00FF0000" Margin="10,10,17,10" Grid.Column="1" Height="Auto" BorderBrush="#00707070" Foreground="#00000000">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse StrokeThickness="0" Margin="10,10,17.4,0.2">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <RadialGradientBrush.Transform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="0.55" />
                                        </TransformGroup>
                                    </RadialGradientBrush.Transform>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</UserControl>
