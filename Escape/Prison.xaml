<Page x:Class="Escape.Prison"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escape"
      mc:Ignorable="d" 
      Title="Escape" Width="1530" Height="830" Loaded="Page_loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Obsah-->
        <Image Name="bg" Source="img\bg\bg_game_1.jpg" Grid.ColumnSpan="2" Grid.RowSpan="2" Stretch="Fill"/>
        <!--Room1-->
        <Image Source="img\items\room1\light_switch.jpg" Margin="691,248,51,144"/>
        <Image Source="img\items\room1\pin.png" Name="pin" Visibility="Hidden" Margin="438,-27,115,188" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="17.099"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="img\items\character\character_state_1.png" Margin="493,147,52,400" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5"/>
        <Button Name="light_switch" Click="lightSwitch" FontSize="10px"  Background="Transparent" Margin="692,248,64,144" BorderBrush="#00707070" Foreground="#00000000" Height="Auto"/>
        <Button Name="light_switch_uv" Click="lightSwitchUv" FontSize="10px" Background="Transparent" Margin="703,248,52,144" BorderBrush="#00707070" Foreground="#00000000" Height="Auto"/>
        <Button Name="monalisa" Margin="164,177,519,144" Click="openmonalisa" Height="Auto" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="img/items/room1/picture_monalisa.png"/>
            </Button.Background>
        </Button>
        <Button Name="rdopamin" Visibility="Hidden" Margin="228,217,527,152" Click="takerdopamin" Height="Auto" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="img\items\room1\dopamin_inpic_r.png"/>
            </Button.Background>
        </Button>
        <Button Name="ldopamin" Visibility="Hidden" Margin="179,238,571,153" Click="takeldopamin" Height="Auto" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="img\items\room1\dopamin_inpic_l.png"/>
            </Button.Background>
        </Button>
        <Image Name="light1" Source="img\items\lights\lighton.png" Margin="180,0,185,198"/>
        <Image Name="flare1" Source="img\items\flares\flareY.png" IsHitTestVisible="False" Opacity="0.8" d:IsHidden="False" Margin="-24,0,742,0" Grid.ColumnSpan="2"/>
        <Rectangle Name="dark1" Visibility="Hidden" Fill="Black" Opacity="0.5" IsHitTestVisible="false" Width="Auto" Height="Auto" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
        <!--Room2-->
        <!--Room4-->
        <!--Room3-->
        <Button Content="Menu" FontSize="50" Click="go_menu" Margin="283,258,10,91" RenderTransformOrigin="0.5,0.5" Height="Auto" Grid.Row="1" Grid.Column="1"/>
        <Button Content="Intro" FontSize="50" Click="go_intro" Margin="283,329,10,22" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Height="Auto" Grid.Column="1"/>
        <!--Bary-->
        <Image Source="img/bars.png" Margin="541.2,10,23.6,288.2" Grid.Column="1"/>
        <ProgressBar x:Name="hpBar" Height="Auto" Background="#FFF05789" Grid.Column="1" Margin="598.2,26,30.6,353.2" BorderBrush="{x:Null}" Foreground="#FFED145B"/>
        <ProgressBar x:Name="drugBar" Height="Auto" Background="#FF35E48A" Grid.Column="1" Margin="598.2,75,30.6,303.2" BorderBrush="{x:Null}" Foreground="#FF00A651" />
        <!--HP-->
        <Label Name="hp" Content="null" FontSize="20" Foreground="White" Grid.Column="1" Margin="646.2,23,33.6,347.2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" Width="85"/>
        <!--Dopamin-->
        <Label Name="dopamin" Content="null" FontSize="20" Foreground="White" Grid.Column="1" Margin="646.2,73,33.6,297.2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" Width="85"/>
        <!-- Console -->
        <WrapPanel x:Name="gameConsole" Grid.Row="1" Width="274" HorizontalAlignment="Left" Margin="0,156,0,10" Opacity="0.75" Visibility="Hidden">
            <TextBox x:Name="gameConsoleInfo" Width="250" MaxHeight="300" HorizontalAlignment="Left" IsReadOnly="True" VerticalAlignment="Top" Height="200" TextWrapping="Wrap" Background="Black" Foreground="Lime" BorderBrush="{x:Null}"/>
            <TextBox x:Name="gameConsoleInput" Width="186" VerticalContentAlignment="Center" MaxHeight="300" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Background="Black" Foreground="Lime" BorderBrush="{x:Null}"/>
            <Button x:Name="gameConsoleButton" Width="65" Height="30" Content="Enter" Click="gameConsole_click" Background="Black" Foreground="Lime" BorderBrush="{x:Null}"/>
        </WrapPanel>
        <!--Ovládání scény-->
        <Button Content="1" FontSize="50" Click="prvni" Margin="371,98,302,251" RenderTransformOrigin="0.5,0.5" Height="Auto" Grid.Row="1" Grid.Column="1"/>
        <Button Content="2" FontSize="50" Click="druhy" Margin="468,98,205,251" RenderTransformOrigin="0.5,0.5" Height="Auto" Grid.Row="1" Grid.Column="1"/>
        <Button Content="3" FontSize="50" Click="treti" Margin="371,169,302,180" RenderTransformOrigin="0.5,0.5" Height="Auto" Grid.Row="1" Grid.Column="1"/>
        <Button Content="4" FontSize="50" Click="ctvrty" Margin="468,169,205,180" RenderTransformOrigin="0.5,0.5" Height="Auto" Grid.Row="1" Grid.Column="1"/>
        <Button Content="Sound" FontSize="50" Click="sound" Margin="565,98,24,251" RenderTransformOrigin="0.5,0.5" Height="Auto" Grid.Row="1" Grid.Column="1"/>
        <!--Pauza hry-->
        <local:Pause x:Name="Game_pause" Visibility="Hidden" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
    </Grid>
</Page>
